---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="description" content="Pack Definitivo para Desarrolladoras - Diseñá. Vendé. Escalá. Nosotros hacemos el resto." />
    <title>{title}</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&family=Playfair+Display:wght@400;500;600;700;800&display=swap" rel="stylesheet">
  </head>
  <body>
    <slot />
    <style is:global>
      /* Variables CSS */
      :root {
        /* Colores */
        --color-primary: #0056E0;
        --color-primary-rgb: 0, 86, 224;
        --color-secondary: #6D28D9;
        --color-secondary-rgb: 109, 40, 217;
        --color-accent: #DB2777;
        --color-accent-rgb: 219, 39, 119;
        --color-gold: #D4AF37;
        --color-gold-rgb: 212, 175, 55;
        --color-background: #FAFAFA;
        --color-text: #0F172A;
        --color-text-light: #64748B;
        --color-border: #E2E8F0;
        
        /* Tipografía */
        --font-heading: 'Playfair Display', serif;
        --font-body: 'Inter', sans-serif;
        
        /* Espaciado base */
        --space-xs: 0.25rem;
        --space-sm: 0.5rem;
        --space-md: 1rem;
        --space-lg: 2rem;
        --space-xl: 4rem;
        --space-xxl: 8rem;
        
        /* Border radius */
        --radius-sm: 4px;
        --radius-md: 8px;
        --radius-lg: 16px;
        
        /* Box shadows */
        --shadow-sm: 0 1px 3px rgba(0, 0, 0, 0.05);
        --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.05);
        --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
        
        /* Transiciones */
        --transition-default: all 0.3s ease;
      }
      
      /* Reset y base */
      *, *::before, *::after {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
        max-width: 100%;
      }
      
      html, body {
        width: 100%;
        overflow-x: hidden;
      }
      
      html {
        scroll-behavior: smooth;
        scroll-padding-top: 5rem;
      }
      
      body {
        font-family: var(--font-body);
        line-height: 1.6;
        color: var(--color-text);
        background-color: var(--color-background);
        font-feature-settings: 'kern' 1, 'liga' 1;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
        position: relative;
      }
      
      img, svg, video {
        max-width: 100%;
        height: auto;
        display: block;
      }
      
      /* Tipografía */
      h1, h2, h3, h4, h5, h6 {
        font-family: var(--font-heading);
        line-height: 1.2;
        margin-bottom: var(--space-md);
        font-weight: 700;
        word-wrap: break-word;
      }
      
      h1 {
        font-size: clamp(2rem, 5vw, 4.5rem);
        letter-spacing: -0.03em;
      }
      
      h2 {
        font-size: clamp(1.75rem, 4vw, 3.5rem);
        letter-spacing: -0.02em;
      }
      
      h3 {
        font-size: clamp(1.5rem, 3vw, 2.5rem);
        letter-spacing: -0.01em;
      }
      
      p {
        margin-bottom: var(--space-md);
      }
      
      /* Utilidades */
      .container {
        width: 100%;
        max-width: 1400px;
        margin-inline: auto;
        padding-inline: var(--space-md);
      }
      
      .section {
        padding-block: var(--space-xl);
        width: 100%;
      }
      
      .text-center {
        text-align: center;
      }
      
      .gradient-text {
        background: linear-gradient(120deg, var(--color-primary), var(--color-secondary));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
      }
      
      .cta-button {
        display: inline-block;
        padding: var(--space-md) var(--space-lg);
        background: linear-gradient(120deg, var(--color-primary), var(--color-secondary));
        color: white;
        text-decoration: none;
        border-radius: var(--radius-md);
        font-weight: 600;
        font-size: clamp(1rem, 1.5vw, 1.25rem);
        transition: var(--transition-default);
        text-align: center;
        word-break: break-word;
      }
      
      .cta-button:hover {
        transform: translateY(-3px);
        box-shadow: var(--shadow-lg);
      }
      
      /* Media Queries */
      @media (min-width: 576px) {
        .container {
          padding-inline: var(--space-lg);
        }
        
        .section {
          padding-block: calc(var(--space-xl) * 1.25);
        }
      }
      
      @media (min-width: 768px) {
        .section {
          padding-block: calc(var(--space-xl) * 1.5);
        }
      }
      
      @media (min-width: 1024px) {
        .container {
          padding-inline: calc(var(--space-lg) * 1.25);
        }
        
        .section {
          padding-block: var(--space-xxl);
        }
      }
      
      @media (min-width: 1400px) {
        .container {
          padding-inline: calc(var(--space-lg) * 1.5);
        }
      }
    </style>
  </body>
</html>
